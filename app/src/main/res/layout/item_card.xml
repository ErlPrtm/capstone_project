<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cardCornerRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vBackgroundMonth"
                android:layout_width="70dp"
                android:layout_height="125dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintCircleRadius="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:circularflow_radiusInDP="16dp"
                tools:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/md_theme_onPrimary"
                android:text="@string/date_placeholder"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/vBackgroundMonth"
                app:layout_constraintStart_toStartOf="@id/vBackgroundMonth"
                app:layout_constraintTop_toTopOf="parent"
                tools:backgroundTint="@color/md_theme_onPrimary" />

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/month_placeholder"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/vBackgroundMonth"
                app:layout_constraintStart_toStartOf="@id/vBackgroundMonth"
                app:layout_constraintTop_toBottomOf="@id/tvDate"
                tools:layout_constraintStart_toStartOf="@id/vBackgroundMonth" />

            <TextView
                android:id="@+id/tvAttendanceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:text="@string/clock_placeholder"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/vBackgroundMonth"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/caption_attendance"
                app:layout_constraintStart_toEndOf="@id/vBackgroundMonth"
                app:layout_constraintTop_toBottomOf="@id/tvAttendanceTime" />

            <View
                android:id="@+id/vLine1"
                android:layout_width="1dp"
                android:layout_height="120dp"
                android:layout_marginStart="24dp"
                android:background="@color/black"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/tvAttendanceTime"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/black"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvCheckoutTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:text="@string/clock_placeholder"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/vLine1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/caption_checkOut"
                app:layout_constraintStart_toEndOf="@id/vLine1"
                app:layout_constraintTop_toBottomOf="@id/tvCheckoutTime" />

            <View
                android:id="@+id/vLine2"
                android:layout_width="1dp"
                android:layout_height="120dp"
                android:layout_marginStart="24dp"
                android:background="@color/black"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/tvCheckoutTime"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/black"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvTotalHoursTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:text="@string/clock_placeholder"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/vLine2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTotalHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/caption_totalHours"
                app:layout_constraintStart_toEndOf="@id/vLine2"
                app:layout_constraintTop_toBottomOf="@id/tvTotalHoursTime" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>